<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Cinemas.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.Cinemas"
    BackgroundColor="Black"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:ListPageViewModel x:Name="vm" />
    </ContentPage.BindingContext>

    <Grid>

        <Image Aspect="AspectFill" Source="cinemafundo.jpg" />

        <Grid RowDefinitions="Auto,*">
            <VerticalStackLayout Padding="60,50,0,20" Spacing="4">

                <Label
                    FontAttributes="Bold"
                    FontSize="22"
                    Text="FLAWBERTFLIX"
                    TextColor="White" />

                <Label
                    FontSize="14"
                    Text="Em cartaz"
                    TextColor="#CCCCCC" />

            </VerticalStackLayout>

            <CollectionView
                Grid.Row="1"
                Margin="40,0,0,0"
                HeightRequest="520"
                ItemsSource="{Binding Movies}"
                VerticalOptions="Start">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="22" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <VerticalStackLayout Spacing="8" WidthRequest="240">

                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference vm}, Path=TapMovieGoToDetailPageCommand}" CommandParameter="{Binding .}" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Border
                                HeightRequest="340"
                                StrokeThickness="0"
                                WidthRequest="240">

                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="28" />
                                </Border.StrokeShape>

                                <Border.Shadow>
                                    <Shadow
                                        Brush="#66000000"
                                        Radius="22"
                                        Offset="0,14" />
                                </Border.Shadow>

                                <Image Aspect="AspectFill" Source="{Binding Cover}">

                                    <Image.Clip>
                                        <RoundRectangleGeometry CornerRadius="28" Rect="0,0,240,340" />
                                    </Image.Clip>

                                </Image>

                            </Border>

                            <HorizontalStackLayout
                                HorizontalOptions="Center"
                                Spacing="6"
                                VerticalOptions="Center">

                                <Image
                                    HeightRequest="16"
                                    Source="clock.png"
                                    VerticalOptions="Center"
                                    WidthRequest="16" />

                                <Label
                                    FontSize="13"
                                    Style="{StaticResource SecondaryText}"
                                    Text="{Binding Duration}"
                                    VerticalTextAlignment="Center" />

                            </HorizontalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                MaxLines="2"
                                Style="{StaticResource PrimaryText}"
                                Text="{Binding Name}" />

                        </VerticalStackLayout>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </Grid>

    </Grid>
</ContentPage>
